{
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "module": "commonjs",
    "target": "ES2022",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "baseUrl": ".",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "outDir": "./build",
    "paths": {
      "@utils": [
        "./src/utils"
      ],
      "@socket": [
        "./src/socket"
      ],
      "@swagger": [
        "./src/swagger"
      ],
      "@contracts": [
        "./src/contracts"
      ],
      "@routers": [
        "./src/routers"
      ],
      "@server": [
        "./src/server"
      ],
      "@handlers": [
        "./src/handlers"
      ],
      "@constants": [
        "./src/constants"
      ],
    }
  },
  "include": [
    "./src"
  ]
}